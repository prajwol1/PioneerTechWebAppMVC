@model PioneerTechSystem.Models.Technical

@{
    ViewBag.Title = "Technical Details";
}

<h2>Employee Technical Details</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>You can save a new employee techninal information or update existing employee details here.</h4>
        If you want to add a completely new employee inforation, please enter data in @Html.ActionLink("Employee Details", "Create", "Employee")  page to continue.
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <span class="return-message">
            @ViewBag.ReturnMessage
        </span>

        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.EmployeeID, "Employee ID", htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.DropDownList("EmployeeID", null, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.ProgrammingLanguages, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.EditorFor(model => model.ProgrammingLanguages, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProgrammingLanguages, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.DatabasesKnown, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.EditorFor(model => model.DatabasesKnown, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DatabasesKnown, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.ORMTechnologies, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.EditorFor(model => model.ORMTechnologies, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ORMTechnologies, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.UITechnologies, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.EditorFor(model => model.UITechnologies, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UITechnologies, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                            <input type="submit" value="Save/Update" class="btn btn-default" />
                </td>
            </tr>
            </table>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
