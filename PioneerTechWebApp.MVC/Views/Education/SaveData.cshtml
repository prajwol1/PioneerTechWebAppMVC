@model PioneerTechSystem.Models.Educational

@{
    ViewBag.Title = "Education Details";
}

<h2>Employee Education Details</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>You can save a new employee education information or update existing employee details here.</h4>
        If you want to add a completely new employee inforation, please enter data in @Html.ActionLink("Employee Details", "Create", "Employee")  page to continue.
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <span class="return-message">
            @ViewBag.ReturnMessage
        </span>

        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.EmployeeID, "Employee ID", htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.DropDownList("EmployeeID", null, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.CourseType, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.EditorFor(model => model.CourseType, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CourseType, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.CourseSpecialization, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.EditorFor(model => model.CourseSpecialization, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CourseSpecialization, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.CourseYearofPassing, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.EditorFor(model => model.CourseYearofPassing, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CourseYearofPassing, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr><td>
                </td>
                <td>
                    <input type="submit" value="Save/Update" class="btn btn-default" />
                </td>
            </tr>
       </table>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
